<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwnKaraoke;assembly=OwnKaraoke"
        xmlns:vm="clr-namespace:AvaloniaKaraoke.Views;assembly=AvaloniaKaraoke"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaKaraoke.Views.MainWindow"
        x:DataType="vm:MainWindow"
        Title="Karaoke Demo App"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        
        <!-- Fejléc -->
        <TextBlock Grid.Row="0" 
                   Text="🎤 Karaoke Demo Application" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Karaoke Display -->
        <Border Grid.Row="1" 
                BorderBrush="DarkBlue" 
                BorderThickness="2" 
                CornerRadius="10" 
                Background="Black" 
                Padding="20"
                MinHeight="300">
            
            <local:OwnKaraokeDisplay x:Name="KaraokeControl"
                                  ItemsSource="{Binding KaraokeLyrics}"
                                  VisibleLinesCount="4"
                                  FontSize="48"
                                  FontFamily="Arial"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HighlightBrush="#FF10A0FF"
                                  AlreadySungBrush="#FF10A0FF"
                                  TextAlignment="Center"/>
        </Border>

        <!-- Vezérlők -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0"
                    Spacing="15">
            
            <Button Name="StartButton" 
                    Content="▶️ Play" 
                    Padding="15,10" 
                    FontSize="16"
                    Background="Green"
                    Foreground="White"
                    Click="StartButton_Click"/>
            
            <Button Name="StopButton" 
                    Content="⏹️ Stop" 
                    Padding="15,10" 
                    FontSize="16"
                    Background="Red"
                    Foreground="White"
                    Click="StopButton_Click"/>
            
            <Button Name="ResetButton" 
                    Content="🔄 Restart" 
                    Padding="15,10" 
                    FontSize="16"
                    Background="Orange"
                    Foreground="White"
                    Click="ResetButton_Click"/>
            
            <ComboBox Name="SongSelector"
                      PlaceholderText="Choose a song..."
                      MinWidth="200"
                      FontSize="14"
                      SelectionChanged="SongSelector_SelectionChanged"/>
        </StackPanel>

        <!-- Státusz információk -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0"
                    Spacing="20">
            
            <TextBlock Name="StatusText" 
                       Text="Ready to launch" 
                       FontSize="14" 
                       Foreground="DarkGreen"/>
            
            <TextBlock Name="ProgressText" 
                       Text="" 
                       FontSize="14" 
                       Foreground="DarkBlue"/>
        </StackPanel>

    </Grid>
</Window>